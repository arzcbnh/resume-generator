@font-face {
    font-family: Cambria;
    src: url("assets/Cambria.ttf");
}

html {
    /* font-size: 14px; */
    font-family: Cambria, serif;
}

body {
    /* width: 210mm; */
    padding: 1rem;

    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 1rem;
}

a {
    color: inherit;
    &::before {}
}

.info {
    grid-column: 1 / 3;
}

.info_name {
}

.info_role {
    font-size: 1.5rem;
}

.content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.projects_title {
    font-weight: bold;
}

.education_subject {
    font-weight: bold;
}

.side {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.personal_list, .techs_list {
    list-style: none;
    padding: 0;
}

.personal_list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.personal_name {
    font-weight: bold;

    &::before {
        content: "";
        height: 1em;
        width: 1em;
        display: inline-block;
        margin-right: 0.5em;
        vertical-align: sub;
    }

    {{#profile}}
        {{{ampersand}}}.-{{{title}}}::before {
            background: url("{{{icon}}}");
        }
    {{/profile}}
}
